	<Place Parts_Common_Metadata_Summary="-" />
	<Place Parts_Common_Metadata="-"/>
	<Match ContentType="Taxonomies">
		<Place Parts_TermPart="-"/>
	</Match>
	<Match ContentType="Blog">
		<Match DisplayType="Summary">
			<Place 
				Parts_Blogs_Blog_Description="Content:before"
				Parts_Blogs_Blog_BlogPostCount="Meta:3"
			/>
		</Match>
		<Match DisplayType="Detail">
			<Place 
				Parts_Blogs_Blog_Description="-"
				Parts_Title="-"
				Parts_Common_Metadata="-"
			/>
		</Match>
	</Match>

  <Match ContentType="Partenaire">
    <Place Parts_Common_Metadata="-"/>
    <Place Parts_Common_Metadata_Summary="-"/>
    <Place Fields_Link="-"/>
    <Place Fields_Numeric="-"/>
	<Match DisplayType="SummaryAdmin">
	  <Place Fields_MediaPicker="Content:1"/>
    </Match>
	<Match DisplayType="Summary">
	  <Place Fields_MediaPicker="Content:1"
			 Parts_Title_Summary="-"/>
    </Match>
  </Match>
	<Match ContentType="BlogPost">
		<Place 
			Parts_Tags_ShowTags="Meta:4"
			Parts_Comments_Count = "Meta:3"
		/>
		<Match DisplayType="Summary">
			<Place 
				Parts_Common_Metadata_Summary="Meta:2"
			/>
		</Match>
		<Match DisplayType="Detail">
			<Place 
				Parts_ListOfComments="Content:after:2"
				Parts_CommentForm="Content:after:3"
				Parts_Common_Metadata="Meta:2"
			/>
		</Match>
	</Match>
</Placement>
